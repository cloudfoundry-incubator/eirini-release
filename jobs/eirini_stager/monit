<% if p("bpm.enabled") %>
check process eirini_stager
  with pidfile /var/vcap/sys/run/bpm/eirini_stager/eirini_stager.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start eirini_stager"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop eirini_stager"
  group vcap
<% else %>
check process eirini_stager
  with pidfile /var/vcap/sys/run/eirini_stager/eirini_stager.pid
  start program "/var/vcap/jobs/eirini_stager/bin/stager_ctl start"
  stop program "/var/vcap/jobs/eirini_stager/bin/stager_ctl stop"
  group vcap
<% end %>
