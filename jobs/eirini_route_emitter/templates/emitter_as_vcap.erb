#!/bin/bash -e

run_dir=/var/vcap/sys/run/eirini_route_emitter
log_dir=/var/vcap/sys/log/eirini_route_emitter
conf_dir=/var/vcap/jobs/eirini_route_emitter/config
pidfile=$run_dir/eirini_route_emitter.pid

echo $$ > $pidfile

exec /var/vcap/packages/eirini/bin/eirini route  \
  --kube-config "$conf_dir/kube.yml" \
  --natsPass <%= p('eirini_route_emitter.nats_password') %> \
  --natsIP <%= p('eirini_route_emitter.nats_ip') %> \
  --namespace <%= p('eirini_route_emitter.kube_namespace') %> \
  2> >(tee -a $log_dir/eirini_route_emitter.stderr.log | logger -p user.error -t vcap.emitter) \
  1> >(tee -a $log_dir/eirini_route_emitter.stdout.log | logger -t vcap.emitter)
