---
processes:
  - name: eirini_route_emitter # same as BOSH-job name means `-p <process>` is not needed
    executable: /var/vcap/packages/eirini/bin/eirini
    args:
    - route
    - --kube-config
    - "/var/vcap/jobs/eirini_route_emitter/config/kube.yml"
    - --namespace
    - <%= p('eirini_route_emitter.kube_namespace') %>
    - --natsPass
    - <%= p('eirini_route_emitter.nats_password') %>
    - --natsIP
    - <%= p('eirini_route_emitter.nats_ip') %>
    limits:
      memory: 3G
      processes: 10
      open_files: 100000
    ephemeral_disk: true
