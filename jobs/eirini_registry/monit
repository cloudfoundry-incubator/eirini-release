<% if p("bpm.enabled") %>
check process eirini_registry
  with pidfile /var/vcap/sys/run/bpm/eirini_registry/eirini_registry.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start eirini_registry"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop eirini_registry"
  group vcap
<% else %>
check process eirini_registry
  with pidfile /var/vcap/sys/run/eirini_registry/eirini_registry.pid
  start program "/var/vcap/jobs/eirini_registry/bin/registry_ctl start"
  stop program "/var/vcap/jobs/eirini_registry/bin/registry_ctl stop"
  group vcap
<% end %>
