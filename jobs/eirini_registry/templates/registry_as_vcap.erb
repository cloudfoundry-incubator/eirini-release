#!/bin/bash -e

run_dir=/var/vcap/sys/run/eirini_registry
log_dir=/var/vcap/sys/log/eirini_registry
conf_dir=/var/vcap/jobs/eirini_registry/config
pidfile=$run_dir/eirini_registry.pid

echo $$ > $pidfile

exec /var/vcap/packages/eirini/bin/eirini registry \
  --rootfs /var/vcap/packages/eirinifs/eirinifs.tar \
  2> >(tee -a $log_dir/eirini_registry.stderr.log | logger -p user.error -t vcap.registry) \
  1> >(tee -a $log_dir/eirini_registry.stdout.log | logger -t vcap.registry)
