<% if p("bpm.enabled") %>
check process eirini_sync
  with pidfile /var/vcap/sys/run/bpm/eirini_sync/eirini_sync.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start eirini_sync"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop eirini_sync"
  group vcap
<% else %>
check process eirini_sync
  with pidfile /var/vcap/sys/run/eirini_sync/eirini_sync.pid
  start program "/var/vcap/jobs/eirini_sync/bin/sync_ctl start"
  stop program "/var/vcap/jobs/eirini_sync/bin/sync_ctl stop"
  group vcap
<% end %>
