#!/bin/bash -e

run_dir=/var/vcap/sys/run/sync
log_dir=/var/vcap/sys/log/sync
conf_dir=/var/vcap/jobs/sync/config
pidfile=$run_dir/sync.pid

echo $$ > $pidfile

exec /var/vcap/packages/eirini/bin/eirini sync \
  --ccApi <%= p('eirini_sync.ccAPI') %> \
  --ccUser <%= p('eirini_sync.ccUser') %> \
  --ccPass <%= p('eirini_sync.ccPassword') %> \
  --kubeconfig="$conf_dir/kube.yml" \
  --backend <%= p('eirini_sync.backend') %> \
  --adminUser <%= p('eirini_sync.adminUser') %> \
  --adminPass <%= p('eirini_sync.adminPassword') %> \
  --namespace <%= p('eirini_sync.kube_namespace') %> \
  --kubeEndpoint <%= p('eirini_sync.kube_endpoint') %> \
  --externalEiriniAddress <%= p('eirini_sync.registry_address') %> \
  <% if p("eirini_sync.skipSslValidation") %>--skipSslValidation<% end %> \
  2> >(tee -a $log_dir/sync.stderr.log | logger -p user.error -t vcap.sync) \
  1> >(tee -a $log_dir/sync.stdout.log | logger -t vcap.sync)
